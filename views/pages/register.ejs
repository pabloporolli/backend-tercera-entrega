<div class="container my-5">
    <div class="jumbotron">

      <h1>REGISTER</h1>
      <br>
      <form class="form" action="/register" method="post" role="form" autocomplete="off">

        <div class="form-group">
          <input id="username" name='username' placeholder="nombre" class="form-control" type="text" required>
        </div>

        <div class="form-group">
          <input id="email" name='email' placeholder="email" class="form-control" type="email" required>
        </div>

        <div class="form-group">
          <input id="password" name='password' placeholder="password" class="form-control" type="password" required>
        </div>

        <div class="form-group">
          <input id="direccion" name='direccion' placeholder="Santa Fe 1234" class="form-control" type="password" required>
        </div>

        <div class="form-group">
          <input id="edad" name='edad' placeholder="33" class="form-control" type="password" required>
        </div>

        <div class="form-group">
          <input id="telefono" name='telefono' placeholder="54879632" class="form-control" type="password" required>
        </div>

        <div class="form-group">
          <input id="foto" name='foto' placeholder="www.imagen.com" class="form-control" type="password" required>
        </div>
    
        <div class="form-group">
          <input class="btn btn-success my-3" type="submit" value="Register">
        </div>
      </form>

      <hr>

      <div class="text-left">
        <button class="btn btn-success my-3" onclick="location.href = '/login'">Ir a Login</button>
      </div>

    </div>
</div>